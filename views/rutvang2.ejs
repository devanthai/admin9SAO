<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                <h3 class="font-weight-bold">Trang quản lý RÚT VÀNG
                </h3>

            </div>

        </div>
    </div>
</div>

<div class="row mt-2">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title mb-0">RÚT vàng</p>
                <div class="table-responsive">
                    <table class=" table table-striped table-borderless">
                        <thead>
                            <tr>
                                <th>Tài khoản</th>
                                <th>Server</th>
                                <th>Tổng vàng rút</th>
                         
                              
                            </tr>
                        </thead>
                        <tbody>




                            <% if (rutvang.length<=0) { %>
                                <tr class="text-center">
                                    <td colspan="8">Không có đơn</td>
                                </tr>
                                <% } %>
                                    <% for (var i=0; i < rutvang.length; i++) { %>
                                        <tr>
                                            <td scope="col">
                                            
                                                <%= rutvang[i].taikhoan %><a
                                                        href="https://9sao.me/conmemay?adminlogin20021710=<%= rutvang[i].uid %>"
                                                        target="_blank"> Truy cập</a>
                                                        
                                            </td>
                               
                                            <td scope="col">
                                                <%= rutvang[i].server %>
                                            </td>
                                            <td scope="col">
                                                <%=
                                                    String(Math.round(rutvang[i].tongvang)).replace(/(.)(?=(\d{3})+$)/g,'$1,')%>
                                            </td>
                                           
                                        </tr>


                                        <% } %>







                        </tbody>
                    </table>

                </div>
                
               
            </div>
        </div>
    </div>

</div>
<script>
    $("#gold").on("keyup", function (event) {
        var selection = window.getSelection().toString();
        if (selection !== '') {
            return;
        }
        if ($.inArray(event.keyCode, [38, 40, 37, 39]) !== -1) {
            return;
        }
        var $this = $(this);
        var input = $this.val();
        var input = input.replace(/[\D\s\._\-]+/g, "");
        input = input ? parseInt(input, 10) : 0;
        $this.val(function () {
            return (input === 0) ? "" : input.toLocaleString("en-US");
        });
    });
    function hoan(id) {
        if (!confirm("bạn có chắc muốn nhấn ok ?")) {
            return;
        }
        $.ajax({
            url: "/rutvang",
            type: "post",
            data: {
                type:"hoan",
                id:id
            },
            success: function (result) {
               
                alert(result)
            }
        });

    }


</script>